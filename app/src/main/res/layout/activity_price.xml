<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <AbsoluteLayout
        android:gravity="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="500dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="100dp"
            android:layout_y="116dp"
            android:text="-주차한 시간-"
            android:gravity="center_horizontal"
            android:textSize="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_x="0dp"
            android:layout_y="35dp"
            android:gravity="center_horizontal"
            android:text="요금 계산"
            android:textColor="#ff0000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="204dp"
            android:ems="10"
            android:hint="시간"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_x="235dp"
            android:layout_y="204dp"
            android:ems="10"
            android:hint="분"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="390dp"
            android:ems="10"
            android:hint="분 당"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_x="235dp"
            android:layout_y="390dp"
            android:ems="10"
            android:hint="가격"
            android:inputType="number" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="149dp"
            android:layout_y="464dp"
            android:text="계산하기"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="111dp"
            android:layout_y="302dp"
            android:text="-주차 요금-"
            android:gravity="center_horizontal"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="135dp"
            android:layout_y="550dp"
            android:text=""
            android:gravity="center_horizontal"
            android:textSize="35dp" />

    </AbsoluteLayout>
</ScrollView>